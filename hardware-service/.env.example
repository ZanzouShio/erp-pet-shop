# Hardware Service Port
PORT=3002

# Security Configuration
# API Key - if set, clients must provide this key to connect
# HARDWARE_API_KEY=your-secure-key-here

# Allowed origins - comma-separated list of origins that can connect
# Use * to allow all (not recommended for production)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# Scale Configuration (Toledo Protocol)
SCALE_ENABLED=false
SCALE_PORT=COM3
SCALE_BAUDRATE=9600

# Cash Drawer Configuration
DRAWER_ENABLED=false
DRAWER_PORT=COM4
DRAWER_BAUDRATE=9600
# Open command in hex bytes separated by comma
DRAWER_COMMAND=0x1B,0x70,0x00,0x19,0xFA

# Barcode Scanner Configuration
# Note: Most USB barcode scanners work as keyboard input (HID)
# No serial config needed - just reads from stdin
SCANNER_ENABLED=true

# Debug mode
DEBUG=true

# Thermal Printer Configuration
PRINTER_ENABLED=false
PRINTER_TYPE=epson
# Printer interface - use printer name for Windows USB printers
# Examples: "\\\\localhost\\Brother QL-710W" or "usb" or "COM5"
PRINTER_INTERFACE=
# Character width: 32 for 58mm, 48 for 80mm printers
PRINTER_WIDTH=32
